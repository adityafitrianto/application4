<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTulisan" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tombol_terjemahan"
        android:id="@+id/btn_terjemah"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/btn_peubah"
        android:layout_centerHorizontal="true"
        android:onClick="onClickTombolTerjemah" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tombol_translate"
        android:id="@+id/btn_translate"
        android:layout_alignTop="@+id/btn_peubah"
        android:layout_toRightOf="@+id/btn_terjemah"
        android:layout_toEndOf="@+id/btn_terjemah"
        android:onClick="onClickTombolTerjemah1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tombol_ubah"
        android:id="@+id/btn_peubah"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:layout_marginTop="58dp"
        android:onClick="onClickTombolTerjemah2" />

</RelativeLayout>
